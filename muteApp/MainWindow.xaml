<Window x:Class="muteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muteApp"
        mc:Ignorable="d"
        Title="boop" Height="350" Width="329"
        Background="#191e26"
        KeyDown="Window_KeyDown" BorderThickness="0" Icon="mute-512.png.ico" WindowStartupLocation="CenterScreen"
        >
    <Grid x:Name="scrollViewer">
        <TextBox x:Name="stateBox" TextWrapping="Wrap" Background="#202123" Foreground="#fffef4" FontFamily="Candara" FontSize="14" Margin="0,30,0,0" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <Button x:Name="bindButton" Content="bind key" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="100" Click="bindButton_Click"/>

    </Grid>
</Window>
